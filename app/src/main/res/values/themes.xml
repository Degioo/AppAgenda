<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AgendaApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Or Theme.MaterialComponents.Light.DarkActionBar,
             Theme.MaterialComponents.DayNight.NoActionBar, etc.
             Choose the one that best fits your app's design. -->

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- You might also need to define colorSurface for the bottom sheet background -->
        <item name="colorSurface">@color/white</item> <!-- Or your desired surface color -->
    </style>
</resources>