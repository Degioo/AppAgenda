<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Event Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_event_name" <!-- Use your existing icon -->
        app:tint="?attr/colorPrimary"
        android:layout_marginEnd="12dp"/>
        <TextView
            android:id="@+id/dialog_event_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Evento"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"/>
    </LinearLayout>

    <!-- Time -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_time" <!-- Use your existing icon -->
        app:tint="?attr/colorOnSurface"
        android:alpha="0.7"
        android:layout_marginEnd="12dp"/>
        <TextView
            android:id="@+id/dialog_event_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorSecondary"/>
    </LinearLayout>

    <!-- Location (if available) -->
    <LinearLayout
        android:id="@+id/dialog_location_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:visibility="gone"> <!-- Initially hidden -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_location" <!-- Use your existing icon -->
        app:tint="?attr/colorOnSurface"
        android:alpha="0.7"
        android:layout_marginEnd="12dp"/>
        <TextView
            android:id="@+id/dialog_event_location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luogo"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorSecondary"/>
    </LinearLayout>

    <!-- Description (if available) -->
    <LinearLayout
        android:id="@+id/dialog_description_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top" <!-- Align icon to top for multiline text -->
    android:layout_marginBottom="16dp"
    android:visibility="gone"> <!-- Initially hidden -->
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_description" <!-- Use your existing icon -->
    app:tint="?attr/colorOnSurface"
    android:alpha="0.7"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="2dp"/>
    <TextView
        android:id="@+id/dialog_event_description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrizione"
        android:textSize="16sp"
        android:lineSpacingMultiplier="1.2"
        android:textColor="?android:attr/textColorSecondary"/>
</LinearLayout>

    <!-- Embedded Map Image View -->
<ImageView
android:id="@+id/dialog_event_map_image"
android:layout_width="match_parent"
android:layout_height="180dp"
android:scaleType="centerCrop"
android:visibility="gone"
android:layout_marginTop="8dp"
android:layout_marginBottom="16dp"
android:contentDescription="Mappa del luogo evento"/>

    </LinearLayout>