<?xml version="1.0" encoding="utf-8"?>

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color of the bottom sheet.
         You can use a static color like "#FFFFFF" for white,
         or a color from your theme like "?attr/colorSurface"
         for better adaptability with light/dark themes. -->
    <solid android:color="?attr/colorSurface" />

    <!-- Define the radius for the top-left and top-right corners.
         This creates the rounded effect at the top of the bottom sheet. -->
    <corners
        android:topLeftRadius="16dp"
        android:topRightRadius="16dp"
        android:bottomLeftRadius="0dp"
        android:bottomRightRadius="0dp" />

    <!-- Optional: Add padding if you want some space between the content
         and the edges of the bottom sheet, though this is often handled
         by the LinearLayout inside the bottom sheet. -->
    <!--
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp" />
    -->
</shape>